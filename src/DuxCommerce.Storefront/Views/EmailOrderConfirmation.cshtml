@model DuxCommerce.OrchardCore.Checkout.OrderConfirmationVm

@{ Layout = ""; }

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<style>
    .order-table tfoot td { border: none; }
</style>

@{ var payment = Model.Order.Order.Payments.FirstOrDefault(); }

<div class="container">
    <h2>@T["Thank you for Your Order"]</h2>

    <div class="row">
        <h3>Order # @Model.Order.Order.OrderNumber</h3>
    </div>

    <div class="row">
        <div class="col-md-4">
            <h3>@T["Billing Address"]</h3>
            <partial name="_DisplayAddress" for="Order.Order.BillingAddress"/>
            <h3>@T["Payment Method"]</h3>
            <p>@payment?.PaymentMethodName</p>
        </div>
        <div class="col-md-4">
            <h3>@T["Shipping Address"]</h3>
            <partial name="_DisplayAddress" for="Order.Order.ShippingAddress"/>
            <h3>@T["Shipping Method"]</h3>
            <p>@Model.Order.Order.ShippingMethodName</p>
        </div>
        <div class="col-md-4">
            <h3>@T["Contact Details"]</h3>
            <p>@Model.Order.Order.ShopperEmail</p>
        </div>
    </div>

    @await DisplayAsync(Model.Order)
</div>