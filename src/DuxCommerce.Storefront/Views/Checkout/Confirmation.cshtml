@using DuxCommerce.OrchardCore
@model DuxCommerce.OrchardCore.Checkout.OrderVm

<style asp-name="@ResourceNames.StoreStyles"></style>

<div class="row order-confirmation">
    <div class="col-md-12">
        <h1>@T["Order Confirmation"]</h1>
        <h2>Order Number: @Model.Order.OrderNumber</h2>
        <p>@Model.Order.ShopperEmail</p>
    </div>
    <div class="col-md-6">
        <h3>@T["Shipping Address"]</h3>
        <partial name="_DisplayAddress" for="Order.ShippingAddress"/>
        <h3>@T["Shipping Method"]</h3>
        <p>@Model.Order.ShippingMethodName</p>
    </div>
    <div class="col-md-6">
        <h3>@T["Billing Address"]</h3>
        <partial name="_DisplayAddress" for="Order.BillingAddress"/>
        <h3>@T["Payment Method"]</h3>
        <p>@Model.Order.Payments.FirstOrDefault()?.PaymentMethodName</p>
    </div>
    <div class="col-md-12">
        <h3>@T["Summary"]</h3>
        @await DisplayAsync(Model)
    </div>
</div>