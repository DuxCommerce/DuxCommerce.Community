@model DuxCommerce.Storefront.Views.AdminCategory.ViewModels.CategoryLinksVm

@{
    string Display(bool display)
    {
        return display ? "active" : string.Empty;
    }

    if (Model.ContentItem != null)
    {
        <ul class="nav nav-tabs mb-3">
            <li class="nav-item">
                <a edit-for="@Model.ContentItem" asp-route-returnUrl="@FullRequestPath" class="nav-link @Display(Model.EditLink)">@T["General"]</a>
            </li>
            <li class="nav-item">
                @{ var route = new { area = "DuxCommerce.Storefront", controller = "AdminCategory", action = "Products", categoryId = Model.ContentItem.ContentItemId }; }
                <a class="nav-link @Display(Model.ProductsLink)" href="@Url.RouteUrl(route)">@T["Products"]</a>
            </li>
        </ul>
    }
}