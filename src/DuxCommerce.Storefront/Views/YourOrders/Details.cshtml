@using DuxCommerce.OrchardCore
@model DuxCommerce.Storefront.Views.YourOrders.ViewModels.YourOrderVm

<style asp-name="@ResourceNames.StoreStyles"></style>

<div class="row mt-3 order-details">
    <div class="col-lg-2">
        @await Html.PartialAsync("_AccountLinks", Model.AccountLinks)
    </div>
    <div class="col-lg-10">
        <div class="row">
            <h2>Order Number: @Model.OrderVm.Order.OrderNumber</h2>
        </div>
        <div class="row">
            <div class="col-md-6">
                <h3>@T["Shipping Address"]</h3>
                <partial name="_DisplayAddress" for="OrderVm.Order.ShippingAddress"/>
                <h3>@T["Shipping Method"]</h3>
                <p>@Model.OrderVm.Order.ShippingMethodName</p>
            </div>
            <div class="col-md-6">
                <h3>@T["Billing Address"]</h3>
                <partial name="_DisplayAddress" for="OrderVm.Order.BillingAddress"/>
                <h3>@T["Payment Method"]</h3>
                <p>@Model.OrderVm.Order.Payments.FirstOrDefault()?.PaymentMethodName</p>
            </div>
        </div>
        <div>
            @await DisplayAsync(Model.OrderVm)
        </div>
    </div>
</div>