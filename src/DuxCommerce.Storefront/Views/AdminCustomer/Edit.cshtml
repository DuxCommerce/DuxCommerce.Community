@using DuxCommerce.OrchardCore
@model DuxCommerce.Storefront.Views.AdminCustomer.ViewModels.EditCustomerVm

<style asp-name="@ResourceNames.StoreStyles"></style>

<h1>@T["Edit Customer"]</h1>

@await Html.PartialAsync("_CustomerLinks", Model.Links)

<form asp-controller="AdminCustomer" asp-action="Edit" asp-route-customerId="@Model.CustomerModel.Id" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="CustomerModel.Id" required/>
    <div class="row mb-3 form-group">
        <div class="col-md-3">
            <label class="form-label float-end" asp-for="CustomerModel.FirstName">@T["First Name"]</label>
        </div>
        <div class="col-md-9">
            <input asp-for="CustomerModel.FirstName" class="form-control" required/>
            <span asp-validation-for="CustomerModel.FirstName"></span>
        </div>
    </div>
    <div class="row mb-3 form-group">
        <div class="col-md-3">
            <label class="form-label float-end" asp-for="CustomerModel.LastName">@T["Last Name"]</label>
        </div>
        <div class="col-md-9">
            <input asp-for="CustomerModel.LastName" class="form-control" required/>
            <span asp-validation-for="CustomerModel.LastName"></span>
        </div>
    </div>
    <div class="row mb-3 form-group">
        <div class="col-md-3">
            <label class="form-label float-end" asp-for="CustomerModel.PhoneNumber">@T["Phone"]</label>
        </div>
        <div class="col-md-9">
            <input asp-for="CustomerModel.PhoneNumber" class="form-control"/>
            <span asp-validation-for="CustomerModel.PhoneNumber"></span>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <div>
            <a asp-action="Index" class="btn btn-secondary">@T["Cancel"]</a>
        </div>
        <div>
            <button class="btn btn-primary" type="submit">@T["Save"]</button>
        </div>
    </div>
</form>